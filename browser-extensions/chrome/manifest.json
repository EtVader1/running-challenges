{
  "manifest_version": 2,

  "name": "Running Challenges",
  "description": "This extension adds challenge information to your parkrun athlete results page. This extension is not affliated with parkrun, but is done out of love for the very active community of tourist and stats geeks.",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "images/logo/logo-128x128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://www.parkrun.org.uk/results/athleteeventresultshistory/*"],
      "js": [
          "js/lib/third-party/jquery-3.3.1.js",
          "js/lib/challenges.js",
          "js/lib/challenges_ui.js",
          "js/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
      "/images/badges/*.png"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
      "page": "html/options.html",
      "chrome_style": true
  },
  "background": {
    "persistent": false,
    "scripts": [
        "js/lib/third-party/jquery-3.3.1.js",
        "js/background.js"
    ]
  }
}
